<h1>Cat Rental Request</h1>
<form action="<%= cat_rental_requests_url %>" method="post">

  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">
    
<ul id="cat_rental_form">
  <li>
    <label for ="target_cat">Cat u want</label>
    <select name="request[cat_id]" id="target_cat" value="<%= @request.cat_id %>">
      <option selected></option>
      <% @cats.each do |cat| %>
        <option value="<%= cat.id %>"  <%= "selected" if cat.id == @request.cat_id %> ><%= cat.name%></option>
      <% end %>
    </select>
  </li>
  <li>
    <label for="rental_start_date">Rental Start Date</label>
    <input type="date" name="request[start_date]" id="rental_start_date" value="<%= @request.start_date %>">
  </li>
  <li>
    <label for="rental_end_date">Rental End Date</label>
    <input type="date" name="request[end_date]" id="rental_end_date" value="<%= @request.end_date %>">
  </li>
  <li>
    <input type="submit" value="Submit Cat Request">
  </li>
<ul>
</form>
